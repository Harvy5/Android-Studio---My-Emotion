<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="76dp"
            android:layout_height="69dp"
            app:srcCompat="@drawable/ic_person_pin"
            tools:ignore="VectorDrawableCompat"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView 
            android:layout_marginLeft="15dp"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_marginTop="20dp"
            android:text="Email :"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:text="abc@a.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView 
            android:layout_marginLeft="15dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTextView"
            android:layout_marginTop="20dp"
            android:text="First Name :"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:id="@+id/firstNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:text="abc"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView 
            android:layout_marginLeft="15dp"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstNameTextView"
            android:layout_marginTop="20dp"
            android:text="Last Name :"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:id="@+id/lastNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:text="123"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView 
            android:layout_marginLeft="15dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastNameTextView"
            android:layout_marginTop="20dp"
            android:text="Day of Birth :"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:id="@+id/dobTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:text="10/10/2010"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="113dp" />

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@id/dobTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button"
            android:textColor="@color/colorPrimary"
            android:text="Sign Out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>